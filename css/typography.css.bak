body#tinymce {font-size: 12px}

p,code,ul,ol {padding-bottom: 1.2em;}

h1 {
	color: #CCC;
	font: normal 2em Impact,sans-serif;
}
h1 a {
	color: #000;
	text-decoration: none;
}
h1 a:hover {
	color: #F00;
}

h2 {font: normal 1.8em Tahoma,sans-serif;}

h1,h2 {padding-top: 6px;}

blockquote {
	color: #CCA;
	display: block;
	font-weight: bold;
	padding-left: 28px;
}

img {border: none;}

img.right {margin: 5px 0 5px 12px;}
img.left {margin: 5px 12px 5px 0;}
img.border {
	background: #555;
	display: block;
	padding: 3px;
}

/* misc */
.clearer {
	clear: both;
	font-size: 0;
}

.left {float: left;}
.right {float: right;}

h1, .decay,.decay-small {
	color: #eee;
	font: normal 25px Impact,arial;
	letter-spacing: 2px;
	padding: 0 0 12px 22px;
}
.decay-small {
	padding-top: 6px;
}
