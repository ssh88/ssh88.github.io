/* standard elements */
html {min-height: 100%;}

* {
	margin: 0;
	padding: 0;
}
p.postinfo {
	border-top: 1px dashed #333;
	color: #666;
	font: bold 0.9em sans-serif;
	margin-bottom: 24px;
	padding: 8px;
}
p.postinfo a {color: #888;}
p.postinfo a:hover {color: #CCC;}

/* structure */
#container {
	margin: 0 auto;
	width: 700px;
  	text-align: left;
	font-size: 14px;
}
/* content */
#content {
	top: 30px;
	position: relative;
}
#site-description {color: #CCC;}
