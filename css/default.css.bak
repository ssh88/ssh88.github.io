#nav {
	top: 20px;
	position: relative;
	height: 30px;
	border-bottom:5px solid #5d615d;
}
#nav ul {
	list-style: none;
	margin: 0 0 0 0px; padding: 0;	
	display: inline;
}
#nav ul li {
	display: inline;
	margin: 0; padding: 0;
}
#nav ul li a {
	margin: 0;	padding: 0 12px;
	font: normal 0.9em sans-serif;
	text-decoration: none;	
	/* customize_nav_link */
	/*color: #c95723; BLACK AND ORANGE THEME*/
	/* customize_nav_link */
	text-transform: uppercase;
}
#nav li ul a {
	/* customize_nav_drop_link */
	background-color: black;
	/* customize_nav_drop_link */
	
}
#nav li ul a {
	float: none;
}
#nav ul li a:hover, 
#nav ul li a:active {
	/* customize_nav_link_hover */
	color: #eee;
	/* customize_nav_link_hover */
	border: none;
}
#nav ul li.nav-selected a {	
	/* customize_nav_link_curent */
	color: #FFFF00;	
	/* customize_nav_link_current */
}
#portfolio{
	position: relative;
	width: 100%;
	margin-top:10px;
	border-bottom: 5px solid #5d615d;	
}
